---
const PROJECTS = [
    {
        title: "Project 1",
        description: "TODO",
        link: "",
        github:"",
        image: "https://placehold.co/300x200",
        tags: ["React", "Tailwind CSS", "TypeScript"]
    }
]
---
{
    PROJECTS.map(project => (
        <article>
            <h3>{ project.title }</h3>
            <p>{ project.description }</p>
            <ul>
                {
                  project.tags.map(tag => (
                    <li>{ tag }</li>
                  ))
                }
            </ul>
            <img src={ project.image } alt={`Project screenshot ${project.image}`}/>
        </article>
    ))
}