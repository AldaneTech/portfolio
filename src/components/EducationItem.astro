---
import LinkInline from "./LinkInline.astro"
import GitHub from "./icons/GitHub.astro"
import LinkButton from "./LinkButton.astro"
import Link from "./icons/Link.astro"
import { Code } from "astro:components"

interface Props {
  title: string
  company: string
  date: string
}

const { title, company, date } = Astro.props
---

<div class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]">
  <div class="relative md:col-span-3">
    <div class="sticky top-0">
      <span class="text-green-400 -left-[42px] absolute rounded-full text-3xl">&bull;</span>
      <h3 class="text-xl font-bold text-green-400">{title}</h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">{company}</h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">{date}</time>
    </div>
  </div>
</div>